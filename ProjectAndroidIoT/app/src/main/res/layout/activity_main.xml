<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"


    tools:context=".MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/applogo"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/logoapp"></ImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@+id/applogo"
            android:gravity="center"
            android:text="My Dashboard"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/templogo"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/templogo"></ImageView>
        <TextView
            android:id="@+id/txtTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@+id/templogo"
            android:text="Temperature: Loading"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            />



    </RelativeLayout>



    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:layout_margin="2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/humiditylogo"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/humiditylogo"></ImageView>

        <TextView
            android:id="@+id/txtHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/humiditylogo"
            android:gravity="center"
            android:text="Humidity: Loading"
            android:textColor="@color/black"
            android:textSize="20sp" />





    </RelativeLayout>


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph2"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_margin="2dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/buttonPUMP"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Turn PUMP" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/buttonLED"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Turn LED" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="AI Helper"
            android:textColor="@color/white"
            android:textSize="35sp"></TextView>

        <TextView
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="Input following values to get help from AI"
            android:textColor="@color/white"
            android:textSize="20sp"></TextView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAI1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAI2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint2" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAI3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint3" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="147dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@color/white"
            android:text="SUBMIT"
            android:textColor="#039BE5"
            android:textStyle="bold"></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="AI ready to answer..."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/aiReply"
            android:textSize="20dp"></TextView>
    </LinearLayout>

</LinearLayout>
